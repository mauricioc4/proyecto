@model Ucaldas.Controllers.MonitoriaController

@{
    ViewBag.Title = "Cargar monitorias desde CSV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cargar monitorias desde archivo CSV</h2>
<br />

<br />


@using (Html.BeginForm("cargarMonitoriaCSV", "Monitoria", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group ">
            <label class="col-md-2 h4">Archivo:</label>
            <div class="col-md-10">
                <input type="file" class="btn btn-default" name="ARCHIVO_CSV"/>
                <p><small>Para subir el archivo debe estar en formato CSV (delimitado por comas) y debe estar cerrado al momento de cargarlo en la plataforma.</small></p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 h4">Periodo:</label>
            <div class="col-md-4">
                <select required class="form-control" name="PERIODO">
                    <option></option>
                    <option value="@Model.obtenerPeriodos()[0]">@Model.obtenerPeriodos()[0]</option>
                    <option value="@Model.obtenerPeriodos()[1]">@Model.obtenerPeriodos()[1]</option>
                </select>
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-10">
                @Html.ActionLink("Regresar", "Index", "Home")
                <button type="submit" class="btn btn-default">Cargar</button>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


